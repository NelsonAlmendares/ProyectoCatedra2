@model List<ModeloPelicula>

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- -->

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="@item.Poster" class="card-img-top" alt="Poster de @item.Titulo">
                <div class="card-body">
                    <h5 class="card-title">@item.Titulo</h5>
                    <p class="card-text"><strong>Sinopsis:</strong> @item.Sinopsis</p>
                    <p class="card-text"><strong>Director:</strong> @item.Director</p>
                    <p class="card-text"><strong>Género:</strong> @item.Genero</p>
                    <p class="card-text"><strong>Fecha de estreno:</strong> @item.Fecha_Estreno</p>
                    <div class="d-flex justify-content-between">
                        <a asp-action="Update" asp-controller="ControllerPelicula" class="btn btn-outline-info" asp-route-Pelicula="@item.ID_Pelicula"><box-icon name='pencil'></box-icon></a>
                        <a asp-action="Delete" asp-controller="ControllerPelicula" class="btn btn-outline-danger" asp-route-Pelicula="@item.ID_Pelicula"><box-icon name='trash'></box-icon></a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


<script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>

